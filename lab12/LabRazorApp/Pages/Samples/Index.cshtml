@page
@model LabRazorApp.Pages.Samples.IndexModel

@{
    ViewData["Title"] = "Samples";
}

<h1>Samples</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Samples[0].SampleCode)</th>
        <th>@Html.DisplayNameFor(m => m.Samples[0].Type)</th>
        <th>@Html.DisplayNameFor(m => m.Samples[0].CollectedDate)</th>
        <th>@Html.DisplayNameFor(m => m.Samples[0].Status)</th>
        <th>Experiment</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Samples)
    {
        <tr>
            <td>@item.SampleCode</td>
            <td>@item.Type</td>
            <td>@item.CollectedDate.ToString("yyyy-MM-dd")</td>
            <td>@item.Status</td>
            <td>@item.Experiment?.Title</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

