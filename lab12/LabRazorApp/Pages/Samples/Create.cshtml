@model LabRazorApp.Pages.Samples.CreateModel

<h1>Create Sample</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Sample.SampleCode"></label>
        <input asp-for="Sample.SampleCode" class="form-control" />
        <span asp-validation-for="Sample.SampleCode" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sample.Type"></label>
        <input asp-for="Sample.Type" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sample.CollectedDate"></label>
        <input asp-for="Sample.CollectedDate" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sample.Status"></label>
        <input asp-for="Sample.Status" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Sample.ExperimentId"></label>
        <select asp-for="Sample.ExperimentId" asp-items="Model.ExperimentsList" class="form-control">
            <option value="">-- select experiment --</option>
        </select>
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
</form>

<br />

