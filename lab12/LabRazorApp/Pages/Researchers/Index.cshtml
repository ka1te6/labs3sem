@page
@model LabRazorApp.Pages.Researchers.IndexModel

@{
    ViewData["Title"] = "Researchers";
}

<h1>Researchers</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
    <tr>
        <th>@Html.DisplayNameFor(m => m.Researchers[0].FullName)</th>
        <th>@Html.DisplayNameFor(m => m.Researchers[0].Position)</th>
        <th>@Html.DisplayNameFor(m => m.Researchers[0].Email)</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Researchers)
    {
        <tr>
            <td>@item.FullName</td>
            <td>@item.Position</td>
            <td>@item.Email</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>