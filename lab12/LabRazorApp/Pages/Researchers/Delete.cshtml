@page
@model LabRazorApp.Pages.Researchers.DeleteModel

<h1>Delete Researcher</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>@Model.Researcher.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Position</dt>
        <dd class="col-sm-9">@Model.Researcher.Position</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Researcher.Email</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Researcher.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-page="Index">Back to List</a>
</form>

