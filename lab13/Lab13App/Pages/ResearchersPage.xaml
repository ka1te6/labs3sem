<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Lab13App.Pages.ResearchersPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:Lab13App.Models"
    Title="Исследователи">

    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="16" RowSpacing="16">
        <VerticalStackLayout Spacing="8">
            <Entry x:Name="FullNameEntry" Placeholder="ФИО *" />
            <Entry x:Name="PositionEntry" Placeholder="Должность" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        </VerticalStackLayout>

        <HorizontalStackLayout Grid.Row="1" Spacing="8">
            <Button Text="Сохранить" Clicked="OnSaveClicked" />
            <Button Text="Удалить" Clicked="OnDeleteClicked" />
            <Button Text="Очистить" Clicked="OnClearClicked" />
        </HorizontalStackLayout>

        <CollectionView
            x:Name="ResearchersCollection"
            Grid.Row="2"
            ItemsSource="{Binding Researchers}"
            SelectionMode="Single"
            SelectionChanged="OnSelectionChanged">
            <CollectionView.EmptyView>
                <Label
                    Margin="0,40,0,0"
                    HorizontalOptions="Center"
                    Text="Нет исследователей"
                    TextColor="Gray" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Researcher">
                    <Border
                        Margin="0,4"
                        Padding="8"
                        BackgroundColor="{AppThemeBinding Light='#F3F4F6', Dark='#1F2937'}"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 8">
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding FullName}" FontAttributes="Bold" />
                            <Label Text="{Binding Position}" FontSize="12" TextColor="Gray" />
                            <Label Text="{Binding Email}" FontSize="12" TextColor="Gray" />
                        </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label
            Grid.Row="3"
            x:Name="StatusLabel"
            TextColor="Gray"
            FontSize="12" />
    </Grid>
</ContentPage>

